{
    "name": "WireGuard Client",
    "id": "wgclient",
    "packaging_format": 1,
    "description": {
        "en": "The WireGuard client used by baioboite",
        "fr": "Le client WireGuard utilisÃ© par la baioboite"
    },
    "version": "1.0~ynh1",
    "url": "https://baionet.fr",
    "license": "AGPL-3.0",
    "maintainer": {
        "name": "Associotion BAIONET",
        "email": "contact@baionet.fr",
        "url": "https://baionet.fr"
    },
    "requirements": {
        "yunohost": ">= 3.5"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php7.0-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for wgclient",
                    "fr": "Choisissez un nom de domaine pour wgclient"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for web administration",
                    "fr": "Choisissez un chemin pour l'administration web"
                },
                "example": "/wgadmin",
                "default": "/wgadmin"
            }
            
        ]
    }
}
